<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity1"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="CONDUCTOR" />

    <EditText
        android:id="@+id/nombreConductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nombre"/>
    <EditText
        android:id="@+id/domicilioConductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="domicilio"/>
    <EditText
        android:id="@+id/nolicenciaConductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nolicencia"/>

    <EditText
        android:id="@+id/fechaConductor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:hint="vence (yyyy/mm/dd)"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar" />

    <ListView
        android:id="@+id/listaConductores"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>